rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Weather data is readable by everyone
    match /weather/{document=**} {
      allow read: if true;
      allow write: if false;
    }

    // Verifications can be created by anyone, read by authenticated users
    match /verifications/{verification} {
      allow create: if true;
      allow read: if request.auth != null;
      allow update: if false;
      allow delete: if false;
    }

    // User profiles (for future use)
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Cached data managed by Cloud Functions only
    match /cache/{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}